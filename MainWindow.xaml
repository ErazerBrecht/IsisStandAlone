<Controls:MetroWindow x:Class="ISIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:ISIS"
        Title="MainWindow" Height="900" MinWidth="960" Closing="MetroWindow_Closing">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="MaxLines" Value="1" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Klantenbeheer">
                <local:KlantenBeheer></local:KlantenBeheer>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
