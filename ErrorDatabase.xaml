<Window x:Class="ISIS.ErrorDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISIS"
        mc:Ignorable="d"
        Title="Database ERROR" Height="200" Width="700" FontSize="14" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="15">
            <Image Margin="0,5,15,0" Name="ErrorImage" Stretch="None" VerticalAlignment="Top"></Image>
            <StackPanel>
                <TextBlock>De databank kan niet geopend worden!</TextBlock>
                <TextBlock Name="TextBlockPath"></TextBlock>
                <TextBlock Margin="0,15,0,0">U kunt manueel zoeken naar een databank bestand (bijvoorbeeld een back-up)!</TextBlock>
                <TextBlock>Of u kunt de applicatie afsluiten!</TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
                    <Button Name="ButtonSearch" Click="ButtonSearch_Click">Zoeken</Button>
                    <Button Name="ButtonQuit" Click="ButtonQuit_Click" Margin="15,0,0,0">Afsluiten</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
